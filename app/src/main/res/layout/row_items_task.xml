<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@color/background"
    >

    <ImageView
        android:id="@+id/img_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten hoat dong"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:paddingLeft="10dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/row_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:paddingLeft="10dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/row_tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:paddingLeft="10dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/row_tv_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngay bat dau"
            android:paddingLeft="10dp"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:id="@+id/row_tv_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngay ket thuc"
            android:paddingLeft="10dp"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

</LinearLayout>